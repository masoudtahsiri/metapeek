{
  "manifest_version": 3,
  "name": "MetaPeek",
  "version": "1.0.0",
  "description": "Analyze and optimize your page's meta tags and SEO.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["lib/web-vitals.js", "content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*",
        "lib/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
} 