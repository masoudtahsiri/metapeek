{
  "manifest_version": 3,
  "name": "MetaPeek",
  "version": "1.0.0",
  "description": "Analyze and optimize your page's meta tags and SEO.",
  "author": "Refact.co",
  "copyright": "Copyright Â© 2025 Refact, LLC. All rights reserved.",
  "homepage_url": "https://refact.co/toolkit/",
  "support_url": "https://refact.co/contact/",
  "privacy_policy_url": "https://raw.githubusercontent.com/masoudtahsiri/metapeek/main/privacy-policy.md",
  "minimum_chrome_version": "88",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*",
        "lib/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "offline_enabled": true
} 